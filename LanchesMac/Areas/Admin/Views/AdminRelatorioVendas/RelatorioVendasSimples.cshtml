@model IEnumerable<LanchesMac.Models.Pedido>

    <h2>Pedidos por Período</h2>

    <nav class="navbar navbar-dark">
        <div class="container-fluid">
            <form class="navbar-form navbar-left">
                <div class="form-group">
                    <div class="form-group">
                        <label for="minDate">Data Inicial</label>
                        <input type="date" class="form-control" name="minDate" value="@ViewData["minDate"]"/>
                    </div>
                    <div class="form-group">
                        <label for="maxDate">Data Final</label>
                        <input type="date" class="form-control" name="maxDate" value="@ViewData["maxDate"]" />
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Filtrar</button>
            </form>
        </div>
    </nav>

 <div class="panel panel-primary">
         <div class="panel-heading">
             <h3 class="panel-title">Total de Pedidos = @Model.Count()</h3>
             <h3 class="panel-title">Total de Lanches nos Pedidos = @Model.Sum(obj => obj.TotalItensPedido).ToString()</h3>
             <h3 class="panel-title">Valor Total dos Pedidos = @Model.Sum(obj => obj.PedidoTotal).ToString("c")</h3>
         </div>
       <div class="panel-body">
          <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>@Html.DisplayNameFor(model => model.PedidoId)</th>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefone)</th>
                    <th>@Html.DisplayNameFor(model => model.PedidoTotal)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <td>@Html.DisplayNameFor(modelItem => item.PedidoId)</td>
                <td>@Html.DisplayNameFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayNameFor(modelItem => item.Email)</td>
                <td>@Html.DisplayNameFor(modelItem => item.Telefone)</td>
                <td>@Html.DisplayNameFor(modelItem => item.PedidoTotal)</td>
                }
            </tbody>
        </table>
    </div>
</div>